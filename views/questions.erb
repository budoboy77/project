<div class="well">
  <table class="table">
    <thead>
      <tr>
        <th>Question Category</th>
        <th>Question Type</th>
        <th>Question Text</th>
        <th>Choices<small>- check box next to correct answer.</small></th>
      </tr>
    </thead>
    <tbody>
      <% if params[:id] != nil %>
       <tr>
        <td><%== select_tag :category, options_from_collection_for_select(@categories, :name, :name, @edit_question.question_category), prompt: "Choose a category..." %></td>
        <td><%== select_tag :type, options_from_collection_for_select(@types, :name, :name, @edit_question.question_category), prompt: "Choose a type..." %></td>
        <td><%== text_area_tag :text, @edit_question.question_text, rows: 3, cols: 100 %></td>
        <td><%== text_field_tag :choice1, @edit_question.choice1, size: 40 %><label class="checkbox inline" for "checkbox"> <%== check_box_tag :answer1, "on" %></label><br><%== text_field_tag :choice2, @edit_question.choice2, size: 40 %><label class="checkbox inline" for "checkbox"> <%== check_box_tag :answer2, "on" %></label><br><%== text_field_tag :choice3, @edit_question.choice3, size: 40 %><label class="checkbox inline" for "checkbox"> <%== check_box_tag :answer3, "on" %></label><br><%== text_field_tag :choice4, @edit_question.choice4, size: 40 %><label class="checkbox inline" for "checkbox"> <%== check_box_tag :answer4, "on" %></label></td>
      </tr>
  </table>
  <%== submit_tag "Update question" %>
      <% else %>
      <tr>
        <td><%== select_tag :category, options_from_collection_for_select(@categories, :name, :name), prompt: "Choose a category..." %></td>
        <td><%== select_tag :type, options_from_collection_for_select(@types, :name, :name), prompt: "Choose a type..." %></td>
        <td><%== text_area_tag :text, "", rows: 3, cols: 100 %></td>
        <td><%== text_field_tag :choice1, "", size: 40 %><label class="checkbox inline" for "checkbox"> <%== check_box_tag :answer1, "on" %></label><br><%== text_field_tag :choice2, "", size: 40 %><label class="checkbox inline" for "checkbox"> <%== check_box_tag :answer2, "on" %></label><br><%== text_field_tag :choice3, "", size: 40 %><label class="checkbox inline" for "checkbox"> <%== check_box_tag :answer3, "on" %></label><br><%== text_field_tag :choice4, "", size: 40 %><label class="checkbox inline" for "checkbox"> <%== check_box_tag :answer4, "on" %></label></td>
      </tr>
  </table>
  <%== submit_tag "Add question" %>
  <% end %>
</div>
<div class="well">
  <table class="table table-striped table-hover table-bordered table-fixed">
  <thead>
    <tr>
      <th></th>
      <th>Category</th>
      <th>Type</th>
      <th>Question text<br></th>
      <th>Choice 1<br></th>
      <th>Choice 2<br></th>
      <th>Choice 3<br></th>
      <th>Choice 4<br></th>
      <th>Correct Answer<br></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
    <tr>
      <td><a href="/questions/<%= question.id %>">Edit</a> <%== submit_tag "delete" %></td>
      <td><%= question.question_category %></td>
      <td><%= question.question_type %></td>
      <td><%= question.question_text %></td>
      <td><%= question.choice1 %></td>
      <td><%= question.choice2 %></td>
      <td><%= question.choice3 %></td>
      <td><%= question.choice4 %></td>
      <td><%= question.correct_answer %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>